{
  "name": "Java 21 Codespace",
  // Use a general-purpose Linux base image, e.g., the 'universal' image
    "image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",

  // Add the Java feature to install JDK 21
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installMaven": "true"
    },
    "mounts": [
      {
        "source": "m2",
        "target": "/home/vscode/.m2",
        "type": "volume"
      }
    ]
  }
}
